@model IEnumerable<Cover>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4" >
        <div class="col-6">
            <h2 class="text-primary">Cover list</h2>
        </div>
         <div class="col-6 text-end">
             <a asp-controller="Cover" asp-action="Create" class="btn btn-primary">
                 <i class="bi bi-plus-circle-dotted"></i> &nbsp; Create new cover
             </a>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Cover name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
                {
                    <tr>
                        <td width="60%">
                            @obj.Name
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Cover" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1"><i class="bi bi-pen"></i>Edit</a>
                                <a asp-controller="Cover" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1"><i class="bi bi-trash"></i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
    </table>
</div>